{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": ["plugin:prettier/recommended", "eslint:recommended"],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "linebreak-style": ["error", "unix"],
        "prettier/prettier": "error"
    },
    "plugins": ["prettier"]
}
